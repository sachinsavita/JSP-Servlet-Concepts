<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
    <display-name>MyWebApp</display-name>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    
    <!-- Servlet Declaration  -->
    <servlet>
        <servlet-name>First</servlet-name>
        <servlet-class>com.servlets.ServletDemo</servlet-class>
    </servlet>
    
    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>First</servlet-name>
        <url-pattern>/ServletDemo</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet Declaration  -->
    <servlet>
        <servlet-name>Second</servlet-name>
        <servlet-class>com.servlets.GenericServletDemo</servlet-class>
    </servlet>
    
    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>Second</servlet-name>
        <url-pattern>/GenericServletDemo</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet Declaration  -->
    <servlet>
        <servlet-name>Third</servlet-name>
        <servlet-class>com.servlets.HttpServletDemo</servlet-class>
    </servlet>
    
    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>Third</servlet-name>
        <url-pattern>/HttpServletDemo</url-pattern>
    </servlet-mapping>
    
    
    
    
    
